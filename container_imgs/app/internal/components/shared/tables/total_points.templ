package tables

import (
    "app/internal/db"
    "strconv"
)

templ TotalPoints(totalPoints []db.UserTotalPoints) {
    <div class="flex justify-center">
        <div class="overflow-x-auto inline-block">
            <table class="bg-gray-800 shadow-md rounded-lg overflow-hidden">
                <thead class="bg-gray-700">
                    <tr>
                        <th class="py-3 px-6 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">User</th>
                        <th class="py-3 px-6 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Total Points</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-700">
                    for _, userTPoints := range totalPoints {
                        <tr class="hover:bg-gray-700 transition-colors duration-200">
                            <td class="py-3 px-6 whitespace-nowrap">{userTPoints.UserName}</td>
                            <td class="py-3 px-6 whitespace-nowrap text-right">{strconv.Itoa(userTPoints.TotalPoints)}</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}